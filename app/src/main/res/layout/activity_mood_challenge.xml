<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F2D2BD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="13dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â† back"
                android:textColor="#9D174D"
                android:background="@android:color/transparent"
                android:onClick="showDashboard" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="How are you feeling today?"
                android:textSize="16sp"
                android:textColor="#9D174D"
                android:gravity="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âˆ Logout"
                android:textColor="#9D174D"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Emojis Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜Š"
                android:textSize="28sp"
                android:layout_margin="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯"
                android:textSize="28sp"
                android:layout_margin="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜¢"
                android:textSize="28sp"
                android:layout_margin="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜´"
                android:textSize="28sp"
                android:layout_margin="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜”"
                android:textSize="28sp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <!-- Reflection box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a quick reflection about your day..."
            android:background="@android:drawable/editbox_background"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <!-- Save Check-in Button (centered) -->
        <Button
            android:id="@+id/btnSaveCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:backgroundTint="#F06292"
            android:text="Save Check-in"
            android:textColor="@android:color/white" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F8BBD0"
            android:layout_marginVertical="16dp" />

        <!-- Relax Together Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relax Together ðŸ¤"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#C2185B"
            android:layout_marginBottom="12dp" />

        <!-- Group Activities -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Breathing Circle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_round_white"
                android:elevation="4dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Breathing Circle\n12 students â€¢ 5 min session"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <Button
                    android:id="@+id/btnBreathingCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:backgroundTint="#2A9DF4"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Study Break Chat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_round_white"
                android:elevation="4dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Study Break Chat\n8 students â€¢ Active now"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <Button
                    android:id="@+id/btnStudyBreakChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:backgroundTint="#22C55E"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Mindful Stretching -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_round_white"
                android:elevation="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mindful Stretching\n15 students â€¢ Starting in 3 min"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <Button
                    android:id="@+id/btnMindfulStretching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:backgroundTint="#7F00FF"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
