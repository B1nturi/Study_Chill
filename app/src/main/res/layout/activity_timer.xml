<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- RelativeLayout Section (optional wrapper) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp">

                <!-- Back Button -->
                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:backgroundTint="@color/navy"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <!-- Logout Button -->
                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:backgroundTint="@color/navy"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Timer Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/timerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/mint">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="Focus Timer"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Timer Circle -->
                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="24dp"
                        android:gravity="center">

                        <!-- Outer Circle -->
                        <ProgressBar
                            android:id="@+id/timerCircleBackground"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circle_background_white"
                            android:rotation="-90" />

                        <!-- Progress Circle -->
                        <ProgressBar
                            android:id="@+id/timerCircle"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circle_progress_green"
                            android:rotation="-90" />

                        <!-- Timer Text -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/timerDisplay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25:00"
                                android:textColor="@color/black"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/timerPhase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus Time"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Timer Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/startBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:backgroundTint="#22C55E"
                            android:paddingLeft="22dp"
                            android:paddingTop="12dp"
                            android:paddingRight="22dp"
                            android:paddingBottom="12dp"
                            android:text="▶Start"
                            android:textColor="#FFFFFF" />

                        <Button
                            android:id="@+id/resetBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="#EF4444"
                            android:enabled="true"
                            android:paddingLeft="22dp"
                            android:paddingTop="12dp"
                            android:paddingRight="22dp"
                            android:paddingBottom="12dp"
                            android:text="↺ Reset"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Preset Buttons (centered) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/preset25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/green"
                            android:text="25min"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/preset45"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:backgroundTint="@color/green"
                            android:text="45min"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/preset60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:backgroundTint="@color/green"
                            android:text="60min"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Play Music Button -->
                    <Button
                        android:id="@+id/playMusicBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/navy"
                        android:text="Play Music"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <!-- Music Player Section -->
        <LinearLayout
            android:id="@+id/musicPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/bg_round_white"
            android:visibility="gone">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music Player"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"/>

            <!-- Now Playing Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_round_white"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:background="@drawable/bg_round_white"
                    android:text="🎼"
                    android:textSize="22sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/currentTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lo-fi Study Beats"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relaxing Instrumental"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Previous Button -->
                <ImageButton
                    android:id="@+id/previousButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/round_button_bg"
                    android:contentDescription="Previous"
                    android:scaleType="center"
                    android:src="@drawable/ic_skip_previous" />

                <!-- Play Button -->
                <ImageButton
                    android:id="@+id/playButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/round_button_accent_bg"
                    android:contentDescription="Play"
                    android:scaleType="center"
                    android:src="@drawable/ic_play_arrow" />

                <!-- Next Button -->
                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/round_button_bg"
                    android:contentDescription="Next"
                    android:scaleType="center"
                    android:src="@drawable/ic_skip_next" />
            </LinearLayout>

            <!-- Volume -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔊"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <SeekBar
                    android:id="@+id/volumeSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="70"
                    android:max="100"
                    android:progressTint="#E91E63"
                    android:thumbTint="#E91E63"/>
            </LinearLayout>

            <!-- Playlists -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study Playlists"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/playlistLofi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/mint"
                    android:text="Lo-fi Beats\nChill and Focus"
                    android:textColor="@color/black"
                    android:gravity="start"/>

                <Button
                    android:id="@+id/playlistNature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/mint"
                    android:text="Nature Sounds\nRain and Forest"
                    android:textColor="@color/black"
                    android:gravity="start"/>

                <Button
                    android:id="@+id/playlistClassical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/mint"
                    android:text="Classical\nPiano and Strings"
                    android:textColor="@color/black"
                    android:gravity="start"/>

                <Button
                    android:id="@+id/playlistAmbient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/mint"
                    android:text="Ambient\nDeep Focus"
                    android:textColor="@color/black"
                    android:gravity="start"/>
            </GridLayout>

            <!-- Close Button -->
            <Button
                android:id="@+id/closeMusicPlayerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:text="Close Player"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
