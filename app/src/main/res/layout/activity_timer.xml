<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F2D2BD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- RelativeLayout Section (optional wrapper) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="13dp">

                <!-- Back Button -->
                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â† back"
                    android:textStyle="bold"
                    android:textColor="#9D174D"
                    android:background="@android:color/transparent"
                    android:onClick="showDashboard" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textColor="#9D174D"
                    android:gravity="center"
                    android:textStyle="bold" />

                <!-- Logout Button -->
                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout âˆ"
                    android:textStyle="bold"
                    android:textColor="#C71585"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Timer Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/timerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="â° Focus Timer"
                        android:textColor="#9D174D"
                        android:textSize="20sp" />

                    <!-- Timer Circle -->
                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="24dp"
                        android:gravity="center">

                        <!-- Outer Circle -->
                        <ProgressBar
                            android:id="@+id/timerCircleBackground"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circle_background_pink"
                            android:rotation="-90" />

                        <!-- Progress Circle -->
                        <ProgressBar
                            android:id="@+id/timerCircle"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circle_progress_pink"
                            android:rotation="-90" />

                        <!-- Timer Text -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/timerDisplay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25:00"
                                android:textColor="#9D174D"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/timerPhase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus Time ðŸŽµ"
                                android:textColor="#DB2777"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Timer Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/startBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:backgroundTint="#22C55E"
                            android:onClick="startTimer"
                            android:paddingLeft="22dp"
                            android:paddingTop="12dp"
                            android:paddingRight="22dp"
                            android:paddingBottom="12dp"
                            android:text="â–¶Start"
                            android:textColor="#FFFFFF" />

                        <Button
                            android:id="@+id/pauseBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:backgroundTint="#EAB308"
                            android:onClick="pauseTimer"
                            android:paddingLeft="22dp"
                            android:paddingTop="12dp"
                            android:paddingRight="22dp"
                            android:paddingBottom="12dp"
                            android:text=" || Pause"
                            android:textColor="#FFFFFF" />

                        <Button
                            android:id="@+id/resetBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="#EF4444"
                            android:onClick="resetTimer"
                            android:paddingLeft="22dp"
                            android:paddingTop="12dp"
                            android:paddingRight="22dp"
                            android:paddingBottom="12dp"
                            android:text=" â†º Reset"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Preset Buttons (centered) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/preset25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#F3F4F6"
                            android:text="25min"
                            android:textColor="#374151"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/preset45"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:backgroundTint="#F3F4F6"
                            android:text="45min"
                            android:textColor="#374151"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/preset60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:backgroundTint="#F3F4F6"
                            android:text="60min"
                            android:textColor="#374151"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Play Music Button -->
                    <Button
                        android:id="@+id/playMusicBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#c93867"
                        android:onClick="openMusicCard"
                        android:text="â™« Play Music"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <!-- Music Player Section -->
        <LinearLayout
            android:id="@+id/musicPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_round_white"
            android:visibility="gone">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽµ Focus Music Player"
                android:textColor="#C2185B"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"/>

            <!-- Now Playing Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_round_white"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:background="@drawable/bg_round_white"
                    android:text="ðŸŽ¼"
                    android:textSize="22sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/currentTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lo-fi Study Beats"
                        android:textColor="#333333"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relaxing Instrumental"
                        android:textColor="#777777"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/prevTrack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_round_white"
                    android:text="â®ï¸"/>

                <Button
                    android:id="@+id/playPauseMusic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#E91E63"
                    android:text="â–¶ï¸"
                    android:textColor="@android:color/white"
                    android:layout_marginHorizontal="8dp"/>

                <Button
                    android:id="@+id/nextTrack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_round_white"
                    android:text="â­ï¸"/>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/musicProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progress="35"
                    android:progressTint="#E91E63"
                    android:backgroundTint="#E0E0E0"
                    android:layout_marginHorizontal="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:45"
                    android:textColor="#666666"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Volume -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”Š"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <SeekBar
                    android:id="@+id/volumeSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="70"
                    android:max="100"
                    android:progressTint="#E91E63"
                    android:thumbTint="#E91E63"/>
            </LinearLayout>

            <!-- Playlists -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study Playlists"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/playlistLofi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="#F8BBD0"
                    android:text="Lo-fi Beats\nChill and Focus"
                    android:textColor="#333333"
                    android:gravity="start"/>

                <Button
                    android:id="@+id/playlistNature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="#F8BBD0"
                    android:text="Nature Sounds\nRain and Forest"
                    android:textColor="#333333"
                    android:gravity="start"/>

                <Button
                    android:id="@+id/playlistClassical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="#F8BBD0"
                    android:text="Classical\nPiano and Strings"
                    android:textColor="#333333"
                    android:gravity="start"/>

                <Button
                    android:id="@+id/playlistAmbient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="#F8BBD0"
                    android:text="Ambient\nDeep Focus"
                    android:textColor="#333333"
                    android:gravity="start"/>
            </GridLayout>

            <!-- Close Button -->
            <Button
                android:id="@+id/closeMusicPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E0E0E0"
                android:text="Close Player"
                android:textColor="#444444"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
