<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green"
        android:paddingTop="20dp"
        android:backgroundTintMode="src_over"
        android:clipToOutline="true"
        android:gravity="center_horizontal">

        <!-- Header with Back + Title + Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Back Button -->
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:backgroundTint="@color/navy"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mindful Stretching"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="@color/navy"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Center Icon + Instructions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/stretchingInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrist and finger stretches â€“ Stretch those typing muscles (3s)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get ready to stretch with 15 other students"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:alpha="0.8"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Today's Routine -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/mint"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Routine (10 minutes)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Routine Items -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Neck rolls and shoulder shrugs (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Seated spinal twist (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Wrist and finger stretches (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Standing forward fold (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Deep breathing and relaxation (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"/>
        </LinearLayout>

        <!-- Waiting Room -->

        <!-- Ready Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/mint"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="ðŸŸ¢ Waiting room (16 joined)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session will begin automatically when the timer reaches zero"
                android:textColor="#666666"
                android:textSize="11sp" />
        </LinearLayout>

        <Button
            android:id="@+id/readyStretching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm Ready! ï¸"
            android:textColor="@color/white"
            android:backgroundTint="@color/navy"
            android:padding="12dp"
            android:elevation="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>
